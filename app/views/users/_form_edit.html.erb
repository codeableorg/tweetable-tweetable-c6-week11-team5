<%= form_with(model: user, url: "/profile") do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :username, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :username, class: "input__content", placeholder: "example" %>
      </div>
      <% if user.errors.messages[:username].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:username].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :email, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.email_field :email, class: "input__content", placeholder: "example@gamil.com" %>
      </div>
      <% if user.errors.messages[:email].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:email].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :name, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.text_field :name, class: "input__content", placeholder: "Example Name" %>
      </div>
      <% if user.errors.messages[:name].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:name].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :avatar, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.file_field :avatar, class: "input__content", placeholder: "**********" %>
      </div>
      <% if user.errors.messages[:avatar].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:avatar].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :password, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.password_field :password, class: "input__content", placeholder: "**********" %>
      </div>
      <% if user.errors.messages[:password].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:password].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :password_confirmation, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.password_field :password_confirmation, class: "input__content", placeholder: "**********" %>
      </div>
      <% if user.errors.messages[:password_confirmation].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:password_confirmation].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>

  <div class="flex gap-4 mb-2">
    <div class="input">
      <%= form.label :current_password, class:"content-xs overline"%>
      <div class="input__container">
        <%= form.password_field :password_confirmation, class: "input__content", placeholder: "**********" %>
      </div>
      <% if user.errors.messages[:password_confirmation].any? %>
      <span class="content-sm input__error-message">
        <%= user.errors.messages[:password_confirmation].join(", ")%>
      </span>
      <% end %>
    </div>
  </div>


  <div>
    <%= form.submit "UPDATE" ,class: "button button--primary fit-content" %>
  </div>
<% end %>